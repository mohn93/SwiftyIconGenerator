@import "../_variables"


body
  padding-top 160px // make the container go all the way to the bottom of the topbar
  padding-bottom 30px
  min-width 700px


.layout__fixed
  min-width 700px
  position fixed
  top 0
  width 100%
  background-color layoutBg
  box-shadow 0 0 2px 2px rgba(0,0,0,.3);
  z-index 10

  // Correct notifications location
  .layout__navbar .container
    position relative
  .notifications
    top 160px
    position absolute

.layout__navbar
  margin-bottom 0


.drop-progress
  background-color #ffd

.navbar-header h1
  margin 0

.navbar-header h1 a
  font-size 24px


.navbar-right li 
  float left
  
.pub-dev-logo
  font-size 24px
  color #EB613D
  margin-right .25em
  font-weight bold
  margin-bottom 4px
  height 32px



  // Social buttons
//
iframe
  &.twitter-follow-button
  &.twitter-share-button
    margin-left 10px
    margin-top 15px

.gplus > div
  top 9px
  position relative

.nav
  .twitter-follow-button
  .twitter-share-button
  .gplus
  .FlattrButton
    transition: opacity .5s ease;
    opacity: .6

.nav:hover
  .twitter-follow-button
  .twitter-share-button
  .gplus
  .FlattrButton
    opacity: 1

// We like to hide ugly file input, but can't use display:none, because
// Chromium will miss events. So, use .invisible, but position out of screen
//
input[type="file"].invisible
  position absolute
  left -10000px

// "No JS" message styles
//
.nojs
.nocookies
  display none
  left 50%
  width 500px
  margin-left -250px
  text-align center
  position absolute
  top 90px
  font-size 24px
  font-weight bold
  line-height 1.4em
  z-index: 1000

.no-js .nojs
.no-cookies .nocookies
  display block

p.note
  color #888

p.help-block
  color #fafafa

